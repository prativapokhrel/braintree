- ["notice", "error", "alert", "success"].each do |alert_type|
  -  unless flash[:"#{ alert_type }"].nil?
    %div{ :class => "#{ user_alert_converter(alert_type) } text-center" }

      %strong= flash[:"#{ alert_type }"]

      - unless error.nil?
        - unless error.try(:errors).nil?
          - if error.errors.count > 0
            %ul#alerts
              - error.errors.full_messages.each do |msg|
                %li= msg
